@model Students_Announcement.Models.Announcement

@{
    ViewData["Title"] = "Create";
}
<style type="text/css">
    body {
        background-color: bisque;
    }

    h1 {
        font-style: italic;
    }

    .przycisk {
        margin-top: 20px;
        box-shadow: 3px 3px 25px 1px rgba(0,0,0,0.75);
        background-color: whitesmoke;
        border: none;
        border-radius: 10px;
        color: black;
        width: 100px;
        height: 50px;
    }

        .przycisk:hover {
            background-color: brown;
            color: white;
        }

    .simple_text {
        color: black;
        font-style: italic;
    }

        .simple_text:hover {
            color: brown;
        }

    .form-control {
        box-shadow: 3px 3px 25px 1px rgba(0,0,0,0.75);
    }
</style>



<h1>Stwórz nowe ogłoszenie</h1>
@if (TempData["info"] != null)
{
    <p class="alert-success">
        Zmiany - @TempData["info"]
    </p>
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="uczelnia" class="control-label"></label>
                <input asp-for="uczelnia" class="form-control" />
                <span asp-validation-for="uczelnia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="wydzial" class="control-label"></label>
                <input asp-for="wydzial" class="form-control" />
                <span asp-validation-for="wydzial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="autor" class="control-label"></label>
                <input asp-for="autor" class="form-control" />
                <span asp-validation-for="autor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tytul" class="control-label"></label>
                <input asp-for="tytul" class="form-control" />
                <span asp-validation-for="tytul" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="kategoria" class="control-label"></label>
                <input asp-for="kategoria" class="form-control" />
                <span asp-validation-for="kategoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="opis" class="control-label"></label>
                <input asp-for="opis" class="form-control" />
                <span asp-validation-for="opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Stwórz" class="przycisk" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy ogłoszeń</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
