@model IEnumerable<Students_Announcement.Models.Announcement>

@{
    ViewData["Title"] = "Ogłoszenia";
}
<style type="text/css">
    body {
        background-color: bisque;
    }

    h1 {
        font-style: italic;
        text-align: center;
    }
    .create_btn2 {
        margin-top: 20px;
        box-shadow: 3px 3px 25px 1px rgba(0,0,0,0.75);
        background-color: whitesmoke;
        border: none;
        border-radius: 10px;
        color: black;
        width: 70px;
        height: 30px;
        text-align: center;
    }
    .create_btn {
        margin-top: 20px;
        box-shadow: 3px 3px 25px 1px rgba(0,0,0,0.75);
        background-color: whitesmoke;
        border: none;
        border-radius: 10px;
        color: black;
        width: 100px;
        height: 50px;
        text-align: center;
    }

        .create_btn a {
            text-decoration: none;
            color: black;
            text-align: center;
        }

            .create_btn a:hover {
                color: white;
            }

        .create_btn:hover {
            background-color: brown;
            color: white;
        }

    tbody {
        background-color: white;
    }

    thead {
        background-color: brown;
        color: white;
    }

    .link_click {
        color: black;
        font-style: italic;
        text-decoration: none;
        font-weight: bold;
    }

        .link_click:hover {
            color: brown;
        }
</style>
<h1>Dostępne ogłoszenia</h1>


<p class="create_btn">
    <a asp-action="Create">Dodaj ogłoszenie</a>

</p>
<p>
    @using (Html.BeginForm())
    {
        <b>Wyszukaj po:</b> @Html.RadioButton("searchBy", "tytul", true) <text>Tytul </text>
        @Html.RadioButton("searchBy", "kategoria") <text>Kategoria </text>
        @Html.RadioButton("searchBy", "uczelnia") <text>Uczelnia </text>
        @Html.TextBox("search") <input type="submit" class="create_btn2" value="szukaj" />
    }

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.uczelnia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.wydzial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tytul)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.kategoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.opis)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.uczelnia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.wydzial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.autor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tytul)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.kategoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.opis)
            </td>
            <td>
                <a asp-action="Edit" class="link_click" asp-route-id="@item.id">Edytuj</a> |
                <a asp-action="Details" class="link_click" asp-route-id="@item.id">Szczegóły</a> |
                <a asp-action="Delete" class="link_click" asp-route-id="@item.id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
